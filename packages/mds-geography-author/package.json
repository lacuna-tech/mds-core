{
  "name": "@mds-core/mds-geography-author",
  "description": "MDS Geography Author API",
  "version": "0.0.1",
  "author": "City of Los Angeles",
  "license": "Apache-2.0",
  "dependencies": {
    "@mds-core/mds-api-helpers": "workspace:0.1.26",
    "@mds-core/mds-api-server": "workspace:0.1.26",
    "@mds-core/mds-db": "workspace:0.1.26",
    "@mds-core/mds-logger": "workspace:0.1.24",
    "@mds-core/mds-providers": "workspace:0.1.26",
    "@mds-core/mds-schema-validators": "workspace:0.1.2",
    "@mds-core/mds-types": "workspace:0.1.23",
    "@mds-core/mds-utils": "workspace:0.1.26",
    "@types/express": "4.17.10",
    "express": "4.17.1"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc --build tsconfig.build.json",
    "start": "PATH_PREFIX=/geography-author pnpm watch server",
    "test": "pnpm test:eslint && pnpm test:unit",
    "test:eslint": "eslint --ignore-path ../../.gitignore '**/*.ts'",
    "test:unit": "PATH_PREFIX=/geography-author DOTENV_CONFIG_PATH=../../.env nyc --use-spawn-wrap  ts-mocha --project ../../tsconfig.json",
    "ts-node": "pnpm build && DOTENV_CONFIG_PATH=../../.env ts-node -r dotenv/config",
    "watch": "nodemon --watch '../../packages' --ext 'ts' --ignore '*.d.ts' --exec pnpm ts-node --"
  },
  "devDependencies": {
    "@mds-core/mds-test-data": "workspace:0.1.26"
  }
}
