{
  "name": "@mds-core/mds-transactions-api",
  "description": "MDS Transaction API",
  "version": "0.1.0",
  "author": "City of Los Angeles",
  "license": "Apache-2.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "tsc --build tsconfig.build.json",
    "start": "PATH_PREFIX=/transaction pnpm watch server",
    "test": "pnpm test:eslint && pnpm test:unit",
    "test:eslint": "eslint --ignore-path ../../.gitignore '**/*.ts'",
    "test:unit": "PATH_PREFIX=/transaction DOTENV_CONFIG_PATH=../../.env jest",
    "ts-node": "DOTENV_CONFIG_PATH=../../.env node -r ts-node/register -r dotenv/config",
    "watch": "pnpm build && nodemon --watch '../../packages' --ext 'ts' --ignore '*.d.ts' --exec pnpm ts-node --"
  },
  "dependencies": {
    "@mds-core/mds-api-helpers": "workspace:0.1.26",
    "@mds-core/mds-api-server": "workspace:0.1.26",
    "@mds-core/mds-logger": "workspace:0.1.24",
    "@mds-core/mds-service-helpers": "workspace:0.1.0",
    "@mds-core/mds-transactions-service": "workspace:0.1.0",
    "@mds-core/mds-types": "workspace:0.1.23",
    "@mds-core/mds-utils": "workspace:0.1.26",
    "@types/express": "4.17.10",
    "express": "4.17.1",
    "http-status-codes": "2.1.4",
    "joi": "17.3.0"
  }
}
