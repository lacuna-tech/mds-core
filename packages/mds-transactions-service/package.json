{
  "name": "@mds-core/mds-transactions-service",
  "version": "0.1.0",
  "description": "MDS Transactions Service",
  "keywords": [
    "mds",
    "transactions"
  ],
  "license": "Apache-2.0",
  "author": "City of Los Angeles",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "tsc --build tsconfig.build.json",
    "start": "pnpm watch server",
    "test": "pnpm test:eslint && pnpm test:unit",
    "test:eslint": "eslint --ignore-path ../../.gitignore '**/*.ts'",
    "pretest:unit": "pnpm typeorm schema:drop",
    "test:unit": "DOTENV_CONFIG_PATH=../../.env jest",
    "ts-node": "DOTENV_CONFIG_PATH=../../.env node --experimental-repl-await -r ts-node/register -r dotenv/config",
    "typeorm": "pnpm ts-node ./node_modules/typeorm/cli.js",
    "watch": "pnpm build && nodemon --watch '../../packages' --ext 'ts' --ignore '*.d.ts' --exec pnpm ts-node --"
  },
  "dependencies": {
    "@mds-core/mds-logger": "0.1.24",
    "@mds-core/mds-repository": "0.1.0",
    "@mds-core/mds-rpc-common": "0.1.0",
    "@mds-core/mds-schema-validators": "0.1.2",
    "@mds-core/mds-service-helpers": "0.1.0",
    "@mds-core/mds-types": "0.1.23",
    "@mds-core/mds-utils": "0.1.26",
    "joi": "17.3.0",
    "typeorm": "0.2.30"
  }
}
