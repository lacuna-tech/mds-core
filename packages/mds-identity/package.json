{
  "name": "@mds-core/mds-identity",
  "description": "MDS Identity",
  "version": "0.0.12",
  "author": "City of Los Angeles",
  "license": "Apache-2.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "tsc --build tsconfig.build.json",
    "start": "PATH_PREFIX=/identity yarn watch server",
    "test": "yarn test:eslint && yarn test:unit",
    "test:eslint": "eslint --fix --ignore-path ../../.gitignore '**/*.ts'",
    "test:unit": "PATH_PREFIX=/identity DOTENV_CONFIG_PATH=../../.env nyc --check-coverage --exclude tests --extension .ts --lines 90 --reporter=text --reporter=html ts-mocha --project ../../tsconfig.json --require tsconfig-paths/register --require source-map-support/register --require dotenv/config --recursive --timeout 5000 tests/**/*.ts",
    "watch": "nodemon --watch '../../packages' --ext 'ts' --ignore '*.d.ts' --exec yarn watch:exec --",
    "watch:exec": "yarn build && DOTENV_CONFIG_PATH=../../.env ts-node -r dotenv/config"
  },
  "dependencies": {
    "@mds-core/mds-api-helpers": "0.1.14",
    "@mds-core/mds-api-server": "0.1.14",
    "@mds-core/mds-logger": "0.1.12",
    "@mds-core/mds-types": "0.1.11",
    "@mds-core/mds-utils": "0.1.14",
    "@types/http-status-codes": "1.2.0",
    "axios": "0.19.0",
    "envalid": "5.0.0",
    "express": "4.17.1",
    "express-validator": "6.2.0"
  },
  "devDependencies": {
    "@mds-core/mds-test-data": "0.1.14"
  }
}
