{
  "name": "@mds-core/mds-collector-backend",
  "version": "0.1.0",
  "description": "Mobility Data Specification Collector Backend Service",
  "keywords": [
    "mds"
  ],
  "license": "Apache-2.0",
  "author": "City of Los Angeles",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "tsc --build tsconfig.build.json",
    "start": "yarn watch server",
    "pretest": "yarn typeorm schema:drop",
    "test": "DOTENV_CONFIG_PATH=../../.env jest",
    "ts-node": "DOTENV_CONFIG_PATH=../../.env node --experimental-repl-await -r ts-node/register -r dotenv/config",
    "typeorm": "yarn ts-node ../../node_modules/typeorm/cli.js",
    "watch": "yarn build && nodemon --watch '../../packages' --ext 'ts' --ignore '*.d.ts' --exec yarn ts-node --"
  },
  "dependencies": {
    "@mds-core/mds-logger": "0.1.24",
    "@mds-core/mds-repository": "0.1.0",
    "@mds-core/mds-rpc-common": "0.1.0",
    "@mds-core/mds-service-helpers": "0.1.0",
    "@mds-core/mds-stream": "0.1.26",
    "@mds-core/mds-types": "0.1.23",
    "@mds-core/mds-utils": "0.1.26",
    "ajv": "7.0.4",
    "ajv-formats": "1.5.1",
    "typeorm": "0.2.30"
  }
}
