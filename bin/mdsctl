      # fixme: knative-eventing failed to resoncile with distinct namespace deployments
      # helm delete --purge ${configs[namespace-natss]}-nats
      # helm delete --purge ${configs[namespace-nats-knative]}-nats-knative
      # helm delete --purge ${configs[namespace-nats-tenant]}-nats-tenant

