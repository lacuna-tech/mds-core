      # for ns in ${configs[namespace-natss]} ${configs[namespace-tenant]}; do # ${configs[namespace-nats-knative]}; do
      #   [ "${ns}" != "${configs[namespace-mds]}" ] && uninstallNamespace ${ns}
      # done; unset ns
      [ -d ${configs[natss]} ] && /bin/rm -rf ${configs[natss]}
    fi
